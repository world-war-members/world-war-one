{
    "compilerOptions": {
      "target": "esnext",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "module": "es2020",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": true,
      "experimentalDecorators": true,
      "jsx": "react-jsx",
      "useUnknownInCatchVariables": false,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@/app/*": ["./src/app/*"],
        "@/pages/*": ["./src/pages/*"],
        "@/features": ["./src/features/*"],
        "@/helper": ["./src/helper/*"],
        "@/types": ["./src/types/*"],
        "@/hooks": ["./src/hooks/*"],
        "@/routes": ["./src/routes/*"],
        "@/components": ["./src/components/*"],
        "@/assets": ["./src/assets/*"],
        "@/layout": ["./src/layout/*"]
      }
    },
    "include": [
      "*/**/*",
      "src/App.tsx",
      "src/pages",
      "src/features",
      "src/helper",
      "src/types",
      "src/hooks",
      "src/routes",
      "src/components",
      "src/assets",
      "src/layout",
      "externals.d.ts",
    ],
    "exclude": [
      "dist",
      "node_modules",
      "jest.config.js"
    ],
  }